{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "scripthost"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "out",
    ".next"
  ]
}
